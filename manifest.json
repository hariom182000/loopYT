{
  "manifest_version": 3,
  "name": "Video Looper",
  "version": "1.0",
  "permissions": [
   "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popups/hello.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ]
}
